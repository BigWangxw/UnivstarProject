<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:orientation="vertical"
    tools:context="com.example.dell.univstarproject.sign.signview.SignActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <ImageButton
            android:id="@+id/zhuce_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/register_return"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:textColor="#0b0b0b"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 输入手机号，快速注册"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="34dp"
            android:layout_marginStart="34dp"
            android:layout_marginBottom="21dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="输入手机号"
            android:id="@+id/zhuce_phone"
            android:layout_marginLeft="35dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/a"
            android:layout_below="@+id/zhuce_phone"
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <EditText
            android:hint="输入验证码"
            android:layout_below="@+id/a"
            android:id="@+id/zhuce_yzm"
            android:layout_marginLeft="35dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <Button
            android:textColor="#0f94e7"
            android:background="#00000000"
            android:text="获取验证码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zhuce_huoqu"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/zhuce_phone"
            android:layout_alignEnd="@+id/zhuce_phone" />
        <Button
            android:textSize="10dp"
            android:text="注册表示你同意UnivStar服务使用协议"
            android:background="#00000000"
            android:layout_marginLeft="35dp"
            android:layout_below="@+id/zhuce_yzm"
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:id="@+id/zhuce"
        android:text="注册"
        android:textSize="18dp"
        android:textColor="#ffff"
        android:background="#0a3be9"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/zhuce_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/weixin"
            android:background="#00000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="75dp"
            android:layout_marginStart="75dp" />
        <TextView
            android:layout_marginLeft="76dp"
            android:layout_marginStart="76dp"
            android:layout_below="@+id/zhuce_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信登录"
            android:textSize="10dp"/>
        <ImageButton
            android:id="@+id/zhuce_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/qq"
            android:background="#00000000"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  QQ登录"
            android:textSize="10dp"
            android:layout_below="@+id/zhuce_qq"
            android:layout_alignLeft="@+id/zhuce_qq"
            android:layout_alignStart="@+id/zhuce_qq" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@mipmap/weibo"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:id="@+id/zhuce_weibo"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/zhuce_qq"
            android:layout_toEndOf="@+id/zhuce_qq" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微博登录"
            android:textSize="10dp"
            android:layout_below="@+id/zhuce_weibo"
            android:layout_alignRight="@+id/zhuce_weibo"
            android:layout_alignEnd="@+id/zhuce_weibo" />
    </RelativeLayout>
</LinearLayout>
