<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.univstarproject.sign.signview.FindActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageButton
            android:id="@+id/find_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/register_return"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />
        <TextView
            android:textColor="#101010"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:textColor="#1b1a1a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证手机号，快速找回密码"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp" />
       
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/find_phone"
            android:hint="请输入手机号"
            android:layout_width="300dp"
            android:layout_marginLeft="35dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/find_phone"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/a"/>
        <EditText
            android:hint="请输入验证码"
            android:layout_marginLeft="35dp"
            android:layout_below="@+id/a"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/find_yzm" />
        <Button
            android:id="@+id/find_huoqu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:background="#00000000"
            android:textColor="#0b5cf2"
            android:layout_alignBaseline="@+id/find_yzm"
            android:layout_alignBottom="@+id/find_yzm"
            android:layout_toRightOf="@+id/find_yzm"
            android:layout_toEndOf="@+id/find_yzm" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/aa"
            android:layout_width="match_parent"
            android:layout_height="30dp" />
        <Button
            android:id="@+id/find_exit"
            android:layout_below="@+id/aa"
            android:layout_marginLeft="35dp"
            android:textSize="18dp"
            android:textColor="#ffff"
            android:layout_width="300dp"
            android:background="#0e6fdd"
            android:text="下一步"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
</LinearLayout>
