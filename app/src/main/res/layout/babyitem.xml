<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_marginTop="10dp">

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="20dp"
            android:src="@mipmap/shanchuziji"
            android:id="@+id/baby_img"
            android:scaleType="fitXY"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:id="@+id/baby_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/baby_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textColor="#000"
        android:textSize="17sp"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:ellipsize="end"
       android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:textSize="10sp"
        android:id="@+id/content_speak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:maxLines="2"/>
    <ImageView
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="30dp"
        android:id="@+id/baby_music"
        android:src="@mipmap/play_music_bg"
        android:layout_width="280dp"
        android:layout_height="170dp" />
    <LinearLayout
        android:layout_marginLeft="25dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/label_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/baby_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout

        android:id="@+id/linear"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:visibility="gone"
        android:id="@+id/tintrf"
        android:layout_marginLeft="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/start"
            android:button="@null"
            android:drawableTop="@drawable/start"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/ping"
            android:button="@null"
            android:drawableTop="@mipmap/reply_normal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp" />
        <RadioButton
            android:id="@+id/zan"
            android:button="@null"
            android:drawableTop="@drawable/zan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/fenxiang"
            android:button="@null"
            android:drawableTop="@mipmap/share_default"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>