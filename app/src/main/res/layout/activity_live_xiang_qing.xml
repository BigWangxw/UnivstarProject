<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dell.univstarproject.view.activity.LiveXiangQingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ts_202">
            <ImageView
                android:id="@+id/xiangqing_big_img"
                android:layout_width="match_parent"
                android:background="#3cf703"
                android:scaleType="centerCrop"
                android:layout_height="match_parent" />

            <ImageView

                android:id="@+id/xiangqing_fenxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginTop="19dp"
                android:src="@mipmap/detail_share" />

            <ImageView
                android:id="@+id/xiangqing_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/xiangqing_fenxiang"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:src="@mipmap/detail_back" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#66000000"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/ts_26">

                <Button
                    android:background="@drawable/buttonselected"
                    android:layout_marginLeft="@dimen/ts_12"
                    android:layout_width="30dp"
                    android:text="重播"
                    android:textSize="@dimen/ts_13"
                    android:textColor="#fff"
                    android:layout_height="20dp" />
<View
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="0dp"/>
                <TextView

                    android:id="@+id/xiangqing_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ts_8"
                    android:text="1111111"
                    android:textColor="#fff"
                    android:textSize="@dimen/ts_13" />

            </LinearLayout>

        </RelativeLayout>

      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <Button
              android:layout_marginLeft="@dimen/ts_10"
              android:textSize="@dimen/ts_10"
              android:id="@+id/biao"
              android:text="表演"
              android:textColor="#00acff"
              android:background="@drawable/liveselected"
              android:layout_width="35dp"
              android:layout_height="18dp"
              android:layout_marginRight="@dimen/ts_20"
              android:layout_marginTop="@dimen/ts_10"
              />

          <Button
              android:id="@+id/jiang"
              android:layout_width="45dp"
              android:layout_height="18dp"
              android:layout_marginRight="@dimen/ts_10"
              android:layout_marginTop="@dimen/ts_10"
              android:background="@drawable/liveselected"
              android:text="名师讲堂"
              android:textColor="#00acff"
              android:textSize="@dimen/ts_10" />

      </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/ts_14"
            android:layout_marginLeft="@dimen/ts_12"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="已预约:"
                    android:textSize="@dimen/ts_12"
                    android:textColor="#999999"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/xiangqing_num"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/ts_8"
                    android:textSize="@dimen/ts_12"
                    android:textColor="#999999"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/ts_12"
                android:gravity="bottom"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="¥"
                    android:textSize="@dimen/ts_14"
                    android:textColor="#000"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/xingqing_price"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/ts_24"
                    android:layout_marginLeft="@dimen/ts_5"
                    android:textColor="#FFD235"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/ts_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/xiangqing_img"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/xiangqing_name"
                    android:text="2222"
                    android:textColor="#fd3903"
                    android:drawableRight="@mipmap/home_level_vip_yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/zhiye_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:id="@+id/xiangqing_guanzhu_btn"
                android:layout_marginRight="@dimen/ts_10"
                android:text="关注"
                android:textColor="#fff"

                android:layout_width="50dp"
                android:layout_height="32dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="@dimen/ts_1" />

        <TextView
            android:layout_width="match_parent"
            android:background="#eeeeee"
            android:layout_height="@dimen/ts_9" />

        <TextView
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="@dimen/ts_1" />
       <com.example.dell.univstarproject.model.bean.MyScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <WebView
               android:id="@+id/xiangqing_web"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               tools:ignore="WebViewLayout">

           </WebView>
       </com.example.dell.univstarproject.model.bean.MyScrollView>
    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/xiangqing_zan"
                android:scaleType="center"
                android:button="@null"
                android:src="@drawable/collect_check_bg"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="50dp" />
            <LinearLayout
                android:background="#00acff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/ts_50">
                <TextView
                    android:id="@+id/xiangqing_buy"
                    android:textSize="@dimen/ts_16"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:text="购买"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
