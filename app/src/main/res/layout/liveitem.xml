<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/live_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ts_170"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />
        <TextView
            android:gravity="center|left"
            android:id="@+id/class_time"
            android:textColor="#fff"
            android:layout_marginTop="-26dp"
            android:background="#66000000"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ts_25" />
    </LinearLayout>
    <TextView
        android:layout_marginLeft="@dimen/ts_10"
        android:id="@+id/live_name"
        android:drawableRight="@mipmap/home_level_vip_yellow"
        android:textColor="#000"
        android:layout_marginTop="@dimen/ts_10"
        android:layout_below="@+id/lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/name"
        android:layout_marginTop="@dimen/ts_20"
        android:layout_marginLeft="@dimen/ts_10"
        android:layout_below="@+id/live_name"
        android:text="已签约："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/live_num"
        android:layout_marginTop="@dimen/ts_20"
        android:layout_below="@+id/live_name"
        android:layout_toRightOf="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:textSize="@dimen/ts_10"
        android:id="@+id/biao"
        android:text="表演"
        android:textColor="#00acff"
        android:background="@drawable/liveselected"
        android:layout_width="35dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lin"
        android:layout_marginRight="@dimen/ts_60"
        android:layout_marginTop="@dimen/ts_10"
        />
    <Button
        android:textSize="@dimen/ts_10"
        android:id="@+id/jiang"
        android:layout_marginTop="@dimen/ts_10"
        android:layout_marginRight="@dimen/ts_10"
        android:text="讲堂"
        android:textColor="#00acff"
        android:background="@drawable/liveselected"
        android:layout_width="35dp"
        android:layout_height="18dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lin"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/live_num"
        android:layout_alignBottom="@+id/live_num"
        android:layout_toLeftOf="@+id/jiang"
        android:layout_toStartOf="@+id/jiang"
        android:text="￥"
        android:textColor="#000"
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/live_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:text="11"
        android:textColor="#f99b04"
        android:textSize="@dimen/ts_20" />

    <Button
        android:id="@+id/chongbo_btn"
        android:textColor="#fff"
        android:text="重播"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/ts_15"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/live_num"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/live_num"
        android:background="#66000000" />

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ts_10"
        android:background="#66b9b9b9" />
</RelativeLayout>